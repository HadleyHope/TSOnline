@page "/fetchdata"

@using TSOnline.Data
@using TSOnline.Common.Interfaces.Services
@using TSOnline.Common.Interfaces.Models
@inject WeatherForecastService ForecastService
@inject ICountriesDatabaseService CountriesDatabaseService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>

    <table class="table">
        <thead>
            <tr>
                <th>ISO 3 Code</th>
                <th>Name</th>
                <th>Region</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in countries)
            {
                <tr>
                    <td>@country.Iso3Code</td>
                    <td>@country.Name</td>
                    <td>@country.Region.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[] forecasts;
    private List<ICountry> countries;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await ForecastService.GetForecastAsync(DateTime.Now);

        countries = await CountriesDatabaseService.GetAllAsync();
    }
}
